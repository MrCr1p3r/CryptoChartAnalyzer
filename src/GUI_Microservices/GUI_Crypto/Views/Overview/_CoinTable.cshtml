<div class="table-responsive">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <button type="button" class="btn btn-primary" id="massImportBtn">
                <i class="fas fa-file-import"></i> Mass Import
            </button>
            <button type="button" class="btn btn-danger ms-2" id="deleteAllBtn">
                <i class="fas fa-trash-alt"></i> Delete All
            </button>
        </div>
        <input type="text" id="tableSearch" class="form-control bg-dark text-light" placeholder="Search in table..." style="max-width: 300px;">
    </div>
    
    <!-- Pagination Controls -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
            <button id="firstPageBtn" class="btn btn-outline-secondary btn-sm me-1" type="button">
                <i class="fas fa-angle-double-left"></i>
            </button>
            <button id="prevPageBtn" class="btn btn-outline-secondary btn-sm me-1" type="button">
                <i class="fas fa-angle-left"></i>
            </button>
            <button id="nextPageBtn" class="btn btn-outline-secondary btn-sm me-1" type="button">
                <i class="fas fa-angle-right"></i>
            </button>
            <button id="lastPageBtn" class="btn btn-outline-secondary btn-sm" type="button">
                <i class="fas fa-angle-double-right"></i>
            </button>
        </div>
        
        <div id="pageInfo" class="text-muted">
            <span>Page <strong id="currentPage">1</strong> of <strong id="totalPages">1</strong></span>
            <span class="ms-3">Showing <strong id="rowsShowing">0</strong> of <strong id="totalRows">0</strong> coins</span>
        </div>
        
        <div class="d-flex align-items-center">
            <label for="pageSizeSelect" class="form-label text-light me-2 mb-0">Show:</label>
            <select id="pageSizeSelect" class="form-select form-select-sm bg-dark text-light" style="width: auto;">
                <option value="25">25</option>
                <option value="50" selected>50</option>
                <option value="100">100</option>
                <option value="200">200</option>
            </select>
            <span class="text-light ms-2">per page</span>
        </div>
    </div>
    
    <table id="coinTable" class="table table-dark table-hover align-middle text-center">
        <thead>
            <tr>
                <th data-column-id="id" role="button" class="sortable">
                    ID <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="symbol" role="button" class="sortable">
                    Symbol <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="name" role="button" class="sortable">
                    Name <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="marketCapUsd" role="button" class="sortable">
                    Market Cap <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="price" role="button" class="sortable">
                    Price <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="priceChangePercentage24h" role="button" class="sortable">
                    24h Change <i class="fas fa-sort"></i>
                </th>
                <th>Chart</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="coinTableBody">
        </tbody>
    </table>
</div>
