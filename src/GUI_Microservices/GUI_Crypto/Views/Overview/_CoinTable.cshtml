@model GUI_Crypto.ViewModels.OverviewViewModel

<div class="table-responsive">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button type="button" class="btn btn-primary" id="addNewCoinBtn">
            <i class="fas fa-plus"></i> Add New Coin
        </button>
        <input type="text" id="tableSearch" class="form-control bg-dark text-light ms-3" placeholder="Search in table..." style="max-width: 300px;">
    </div>
    <table id="coinTable" class="table table-dark table-hover align-middle text-center">
        <thead>
            <tr>
                <th data-column-id="id" role="button" class="sortable">
                    ID <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="symbol" role="button" class="sortable">
                    Symbol <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="name" role="button" class="sortable">
                    Name <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="price" role="button" class="sortable">
                    Price <i class="fas fa-sort"></i>
                </th>
                <th data-column-id="isStablecoin" role="button" class="sortable">
                    Stablecoin <i class="fas fa-sort"></i>
                </th>
                <th>Chart</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="coinTableBody">
        </tbody>
    </table>
</div>
