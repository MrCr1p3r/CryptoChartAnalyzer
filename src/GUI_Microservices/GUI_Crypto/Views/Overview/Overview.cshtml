@model GUI_Crypto.ViewModels.OverviewViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Overview</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-chart-financial"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #1a1a2e;
            color: #ffffff;
        }
        .table-dark-purple {
            background-color: #222034;
        }
        .table-dark-purple th,
        .table-dark-purple td {
            color: #ffffff;
        }
        .sidebar {
            background-color: #2e294e;
            height: 100vh;
        }
        .sidebar h5 {
            color: #a29bfe;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Left Sidebar -->
            <div class="col-md-2 sidebar d-none d-md-block">
                <h5 class="text-center py-3">Left Sidebar</h5>
                <ul class="nav flex-column px-2">
                    <li class="nav-item">
                        <a href="#" class="nav-link text-light">Option 1</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-light">Option 2</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-light">Option 3</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-8">
                <h1 class="text-center py-3">Cryptocurrency Overview</h1>
                <div class="table-responsive">
                    <table class="table table-dark-purple table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Symbol</th>
                                <th>Name</th>
                                <th>Chart (to be implemented)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var coin in Model.Coins)
                            {
                                <tr>
                                    <td>@coin.Id</td>
                                    <td>@coin.Symbol</td>
                                    <td>@coin.Name</td>
                                    <td>@coin.KlineData.Count()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="col-md-2 sidebar d-none d-md-block">
                <h5 class="text-center py-3">Right Sidebar</h5>
                <ul class="nav flex-column px-2">
                    <li class="nav-item">
                        <a href="#" class="nav-link text-light">Option A</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-light">Option B</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-light">Option C</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
