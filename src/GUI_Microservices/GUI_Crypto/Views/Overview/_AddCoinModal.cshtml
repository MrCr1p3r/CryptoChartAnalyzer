<!-- Add New Coin Modal -->
<div class="modal fade" id="addCoinModal" tabindex="-1" aria-labelledby="addCoinModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title" id="addCoinModalLabel">Add New Coin</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="coinSearch">Search Coin</label>
                    <input type="text" class="form-control bg-dark text-light" id="coinSearch" placeholder="Start typing coin symbol...">
                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" class="text-center my-4 d-none">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <div class="mt-2">Loading available coins...</div>
                    </div>
                    <div id="searchResults" class="list-group mt-2" style="max-height: 200px; overflow-y: auto; scrollbar-width: thin;">
                        <!-- Search results will be populated here -->
                    </div>
                </div>
                <div id="selectedCoin" class="mt-3 d-none">
                    <h6>Selected Coin:</h6>
                    <div class="alert alert-info">
                        Symbol: <span id="selectedCoinSymbol"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label for="coinName">Coin Name</label>
                        <input type="text" class="form-control bg-dark text-light" id="coinName" placeholder="Enter coin name">
                        <small class="text-muted">Enter a custom name for this coin</small>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addCoinBtn" disabled>Add Coin</button>
            </div>
        </div>
    </div>
</div> 
